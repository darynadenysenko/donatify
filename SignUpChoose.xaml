<Window x:Class="CharityApplication.SignUpChoose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="450" Width="800">
    <Grid Background="#F4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Content="You are" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,0,0,20"/>

        <Button Content="Donator" Click="DonatorChoice_Click" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="40" Margin="0,20,0,0"/>
        <Button Content="Organization" Click ="OrganisationChoice_Click" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="40" Margin="0,20,0,0"/>
    </Grid>
</Window>

